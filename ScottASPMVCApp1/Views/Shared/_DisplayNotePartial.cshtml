@model ScottASPMVCApp1.Models.Note
@*
This is the information to be shown if a note is to be displayed.    

This is straight forward, display the data fields of the note.
*@

@* In order to have a 'Cleaner' appearance, the Labels were removed, except
    for the creation and update dates.*@
<div class="form-group">
    <span class="col-md-12">
        @Html.DisplayFor(model => model.Subject)
    </span>
</div>

<div class="form-group">
    <div class="col-md-12 "> 
        @* Note use of the CSS id displayTextArea *@
        @Html.TextAreaFor(model => model.NoteText, htmlAttributes: new { @id = "displayTextArea", @readonly = true, @cols = 40, @rows = 10, @class = "form-control" })
    </div>
</div>

<div class="form-group">
    <span class="col-md-6">
        @Html.LabelFor(model => model.UpdateDate)
        @Html.DisplayFor(model => model.UpdateDate)
    </span>
</div>

<div class="form-group">
    <span class="col-md-6">
        @Html.LabelFor(model => model.CreateDate)
        @Html.DisplayFor(model => model.CreateDate)
    </span>
</div>
