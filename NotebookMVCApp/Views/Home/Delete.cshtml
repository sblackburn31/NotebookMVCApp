@* Purpose: Display the note and allow the user to either confirm or cancel the removal of the note.*@

@model NotebookMVCApp.Models.Note

@{
    ViewBag.Title = "Delete";
    ViewBag.Description = "This screen deletes a note, it prompt to continue and another action deletes the note.  It is a secure screen.";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Delete</h2>

<h3>Are you sure you want to <strong>delete</strong> this note?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    @* Call to display the note in a read only form*@
    @Html.Partial("_DisplayNotePartial")
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @* POST back to the controller the delete operation*@
            <input type="submit" value="Delete" class="btn btn-default btn-primary" />

            @* Cancel out of the removal operation and return back to the notebook*@
            @Html.ActionLink("Cancel", "Notebook", null, new { @class = "btn  btn-info" })
        </div>
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
